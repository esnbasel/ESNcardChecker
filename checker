            --light-gray: #f4f4f4;
            --dark-gray: #333;
        }

        /* Basic body styling for centering content */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: var(--light-gray);
            color: var(--dark-gray);
        }

        /* Main container for the app */
        .container {
            width: 90%;
            max-width: 400px;
            padding: 2rem;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            color: var(--primary-color);
            margin-top: 0;
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
        }

        /* Input field styling */
        #esnCodeInput {
            width: 100%;
            padding: 12px;
            margin-bottom: 1rem;
