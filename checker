<body>

    <div class="container">
        <h1>ESNcard Checker</h1>
        <input type="text" id="esnCodeInput" placeholder="Enter ESNcard number..." aria-label="ESNcard number">
        <button id="checkButton">Check Status</button>
        <div id="statusResult"></div>
    </div>

    <script>
        const esnInput = document.getElementById('esnCodeInput');
        const checkBtn = document.getElementById('checkButton');
        const statusDiv = document.getElementById('statusResult');

        // Function to perform the check
        const checkCardStatus = async () => {
            const esnCode = esnInput.value.trim();
            if (!esnCode) {
                alert("Please enter an ESNcard number.");
                return;
            }

            const apiUrl = `https://esncard.org/services/1.0/card.json?code=${esnCode}`;

            // Reset previous status and show a loading message
            statusDiv.className = '';
            statusDiv.style.display = 'block';
            statusDiv.textContent = 'Checking... ðŸ¤”';

            try {
                const response = await fetch(apiUrl);

                // Handle HTTP errors like 404 Not Found
                if (!response.ok) {
                    throw new Error('Card not found or network error.');
                }

                const data = await response.json();
                
                // Check if the API returned a valid card object
                if (Array.isArray(data) && data.length > 0) {
                    const card = data[0];
                    if (card.status === 'active') {
                        statusDiv.className = 'active';
                        statusDiv.innerHTML = `Activated âœ…
                            <span>Section: ${card['section-code']}</span>
                            <span>Expires: ${card['expiration-date']}</span>`;
                    } else {
                        statusDiv.className = 'inactive';
                        statusDiv.textContent = 'Inactive âŒ';
                    }
                } else {
                    // Handle cases where the API returns an empty array for an invalid code
                    throw new Error('Invalid ESNcard number.');
                }

            } catch (error) {
                console.error('Error fetching card data:', error);
                statusDiv.className = 'inactive';
                statusDiv.textContent = 'Inactive or Invalid âŒ';
            }
        };

        // Event Listeners
        checkBtn.addEventListener('click', checkCardStatus);

        // Allow pressing 'Enter' in the textbox to trigger the check
        esnInput.addEventListener('keypress', (event) => {
            if (event.key === 'Enter') {
                event.preventDefault(); // Prevents default form submission
                checkCardStatus();
            }
        });
    </script>
</body>
</html>
